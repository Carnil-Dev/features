{
  "name": "@carnil/compliance",
  "version": "0.1.0",
  "description": "SOC2/GDPR/Compliance Tooling for Carnil Payments SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "compliance:check": "node dist/ci-scripts/compliance-check.js",
    "compliance:audit": "node dist/ci-scripts/audit-trail.js",
    "compliance:gdpr": "node dist/ci-scripts/gdpr-compliance.js"
  },
  "dependencies": {
    "@carnil/core": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "crypto": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "tsup": "^7.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "typescript": ">=5.0.0"
  }
}
